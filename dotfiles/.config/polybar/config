[module/date]
type = internal/date

format-padding = 1

interval = 1.0

#time =  %I:%M %p - %A, %B/%d
time = %I:%M %p
time-alt = %h %d, %Y

format = %{A3:gnome-control-center datetime:}<label>%{A}

label = %time%

