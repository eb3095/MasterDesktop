[module/network]
type = internal/network
interface = enp3s0

interval = 1.0
accumulate-stats = true
unknown-as-up = true

format-connected = %{A1:gnome-control-center network &:}%{A3:~/.config/master-desktop/scripts/getNetData.sh enp3s0:}<label-connected>%{A}%{A}
format-connected-padding = 0

format-disconnected = %{A1:gnome-control-center network &:}<label-disconnected>%{A}
format-disconnected-padding = 0

label-connected = ﯴ
label-disconnected = 

###############################################################################
[module/update]
type = custom/script
exec = if [ `/usr/bin/checkupdates | wc -l` -gt 1 ]; then echo '罹  '; else echo '  '; fi
interval = 5
tail = true
click-left = tilix -e bash -c "echo 'Upgrading packages...' && sudo pacman -Syu --noconfirm" &
